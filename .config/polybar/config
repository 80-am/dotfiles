[module/battery]
format-background = #77000000 
format-padding = 2
type = internal/battery
full-at = 97

# calculate average of BAT0 + BAT1
exec = "count=$(acpi -b | wc -l); sum=$(acpi -b | egrep -o '[0-9]{1,3}%' | tr -d '%' | xargs -I% echo -n '+%'); echo Avg capacity: $(( sum / count ))%" 

